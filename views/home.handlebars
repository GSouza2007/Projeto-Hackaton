<main>
    <div class="btn btn-warning">
        <a href="eventosAdicionar">Adicionar evento</a>
    </div>
    {{!--Listagem de eventos / produtos --}}
    <div class="container">
        <div class="row">
           {{#each eventos}}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card">
                    <img src="../imagens/{{imagem}}">
                    <div class="textos">
                        <p>{{nome}}</p>
                        <p>R${{valor}}</p>
                    </div>
                    <a href="/eventosEditar/{{id}}" class="btn btn-warning">Alterar</a>
                    <a href="/remover/{{id}}&{{imagem}}" class="btn btn-danger">Remover</a>
                </div>
            </div>
           {{/each}}
        </div>
    </div>

    <hr>

    <div class="btn btn-warning acima">
        <a href="noticiasAdicionar">Adicionar noticia</a>
    </div>

    <div class="container">
        <div class="row">
           {{#each noticias}}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card">
                    <img src="../imagens/{{imagem}}">
                    <div class="textos">
                        <p>{{nome}}</p>
                        <p>{{descricao}}</p>
                        <p>{{autor}}</p>
                    </div>
                    <a href="/noticiasEditar/{{id}}" class="btn btn-warning">Alterar</a>
                    <a href="/removerNoticias/{{id}}&{{imagem}}" class="btn btn-danger">Remover</a>
                </div>
            </div>
           {{/each}}
        </div>
    </div>

     <div class="btn btn-warning acima">
        <a href="comentariosAdicionar">Adicionar coment√°rio</a>
    </div>

    <div class="container">
        <div class="row">
           {{#each comentarios}}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card">
                    <div class="textos">
                        <p>{{nome}}</p>
                        <p>{{comentario}}</p>
                    </div>
                    <a href="/removerComentarios/{{id}}" class="btn btn-danger">Remover</a>
                </div>
            </div>
           {{/each}}
        </div>
    </div>
</main>