<main>
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <form action="/editarNoticias" method="post" enctype="multipart/form-data">
                    <img src="../imagens/{{noticias.imagem}}">
                    <input type="hidden" name="id" value="{{noticias.id}}">

                    <input type="text" name="nome" value="{{noticias.nome}}" class="form-control" placeholder="Título da notícia">

                    <input type="text" class="form-control" value="{{noticias.descricao}}" name="descricao" placeholder="Insira a descrição da noticia">

                    <input class="form-control" name="imagem" type="file">

                    <input type="text" class="form-control" value="{{noticias.autor}}" name="autor" placeholder="Nome do autor">

                    <input type="submit" class="btn btn-primary" value="Alterar">
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</main>