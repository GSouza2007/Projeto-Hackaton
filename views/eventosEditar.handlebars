<main>
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <form action="/editar" method="post" enctype="multipart/form-data">
                    <img src="../imagens/{{eventos.imagem}}">

                    <input type="hidden" name="nomeimagem" value="{{eventos.imagem}}">
                    <input type="hidden" name="id" value="{{eventos.id}}">
                    <input type="text" name="nome" class="form-control" value="{{eventos.nome}}" placeholder="Nome do produto">
                    <input type="number" class="form-control" value="{{eventos.valor}}" name="valor" placeholder="Insira o valor">
                    <input class="form-control" name="imagem" type="file">
                    <input type="submit" class="btn btn-primary" value="Atualizar">
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</main>